<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv_title"
                android:layout_toRightOf="@+id/cv_photo"
                android:layout_alignParentTop="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/dark_grey"
                android:textSize="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv_region"
                android:layout_toRightOf="@+id/cv_photo"
                android:layout_below="@+id/cv_title"
                android:text="장소"
                android:layout_marginRight="15dp"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/article_subheading"
                />

            <TextView
                android:id="@+id/cv_genre"
                android:text="장르"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_title"
                android:layout_toRightOf="@+id/cv_region"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/article_subheading"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/cv_date"
                android:text="날짜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_title"
                android:layout_toRightOf="@+id/cv_genre"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/article_subheading"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/cv_time"
                android:text="시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_title"
                android:layout_toRightOf="@+id/cv_date"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/article_subheading"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>